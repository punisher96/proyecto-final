{{#each errors}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
    {{text}}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
{{/each}}

    <div class="container mt-4">
        <h4 class="mb-3 text-center">Registro de usuario</h4>
        <form class="needs-validation form-signin" method="POST" novalidate="" action="/registro">
            <div class="row g-3">
                <div class="col-sm-6 form-group">
                    <label for="nombre" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="nombre" placeholder="Nombres" name="nombre" value="" required="">
                    <div class="invalid-feedback">
                        Por favor coloque su nombre.
                    </div>
                </div>

                <div class="col-sm-6 form-group">
                    <label for="apellido" class="form-label">Apellido</label>
                    <input type="text" class="form-control" id="apellido" placeholder="Apellidos" name="apellido" value="" required="">
                    <div class="invalid-feedback">
                        Por favor coloque su apellido.
                    </div>
                </div>

                <div class="col-12 form-group">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" placeholder="you@example.com" name="email">
                    <div class="invalid-feedback">
                        Por favor introduzca un email valido.
                    </div>
                </div>

                <div class="col-12 form-group">
                    <label for="usuario" class="form-label">Usuario</label>
                    <div class="input-group has-validation">
                        <span class="input-group-text">@</span>
                        <input type="text" class="form-control" id="usuario" placeholder="Nombre de usuario"
                            required="" name="nombre_de_usuario">
                        <div class="invalid-feedback">
                            Por favor introduzca su nombre de usuario.
                        </div>
                    </div>
                </div>
                <div class="col-12 form-group">
                    <label for="password" class="form-label">Contrase単a</label>
                    <input type="password" class="form-control" id="password" required="" name="password">
                    <div class="invalid-feedback">
                        Introduzca su contrase単a.
                    </div>
                </div>
                <div class="col-12 form-group form-group">
                    <label for="passwordConfirm" class="form-label">Confirme su Contrase単a</label>
                    <input type="password" class="form-control" id="passwordConfirm" required="" name="c_password">
                    <div class="invalid-feedback">
                        Introduzca su contrase単a de nuevo.
                    </div>
                </div>

            </div>

            <br>



            <button class="w-100 btn btn-primary btn-lg" type="submit">Registrarse</button>
        </form>
        </div>
