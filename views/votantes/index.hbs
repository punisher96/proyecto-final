<section>
    <div class="container">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <div>
                    <h1 class="pt-3 page">Sistema de votaciones</h1>
                    <img src="../../assets/img/votantes/indexVotar.jpg" alt="" srcset="" class="img-fluid imagen1">
                </div>
                <div class="mt-3 input-group">
                    <form action="/Votante-Confirm" method="post" class="form">
                        <div class="mb-3 input-group align-content-lg-center">
                            <span class="input-group-text" id="basic-addon2">Cedula de identidad</span>
                            <input type="text" class="form-control" placeholder="Documento de identidad" name="documento_de_identidad">
                            <button type="submit" class="btn bg-success bg-gradient text-light">Votar</button>
                        </div> 
                    </form>
                </div>
                    {{#each errors}}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    {{text}}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>  
                    {{/each}}
            </div>
            <div class="col-md-2"></div>
        </div>
    </div>
</section> 