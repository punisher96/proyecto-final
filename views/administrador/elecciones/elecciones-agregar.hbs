  <div class="mt-4 row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
    {{#if editMode}}
          <div class="card">
            <div class="text-white card-header bg-dark">
                {{#if editMode}}Editar elecciones{{else}}Agregar elecciones{{/if}}
            </div>
            <div class="card-body">
                <form enctype="multipart/form-data" method="POST" action="{{#if editMode}}/editar-elecciones{{else}}/agregar-elecciones{{/if}}">
                    <div class="mb-3">
                        <label for="nombre" class="form-label">Nombre de la eleccion</label>
                        <input type="text" class="form-control" id="nombre" name="nombre"
                            value="{{#if editMode}}{{elecciones.nombre}}{{/if}}">
                    </div>

                    <div class="mb-3">
                        <label for="fecha" class="form-label">Fecha de realización</label>
                        <input type="date" class="form-control" id="fecha" name="fecha"
                            value="{{#if editMode}}{{elecciones.fecha}}{{/if}}"
                            placeholder="dd-mm-yyyy" min="1997-01-01" max="2030-12-31">
                    </div>
                      
                    {{#if editMode}}
                    <div class="mb-3">
                        <input type="hidden" name="eleccionId" value="{{#if editMode}}{{elecciones.id}}{{/if}}">
                        <label for="estado" class="form-label">Estado</label>
                        <select class="form-control" id="estado" name="estado">
                           {{#if elecciones.estado}} 
                                <option value=1 selected="selected">Activo</option>
                                <option value=0>Inactivo</option>

                            {{else}}
                                <option value=1>Activo</option>
                                <option value=0 selected="selected">Inactivo</option>
                           {{/if}}
                        </select>
                    </div>
                    {{/if}} 
                    
                    <button type="submit" class="btn btn-primary">
                       {{#if editMode}}
                        Editar
                         {{else}}
                        Agregar
                       {{/if}} 
                    </button>
                    <a href="/elecciones" type="button" class="btn btn-warning">Regresar</a>
                </form>
            </div>
            </div>  
        {{else}}
        {{#if candidat2sActivos}} 
            <div class="card">
                <div class="text-white card-header bg-dark">
                    {{#if editMode}}Editar elecciones{{else}}Agregar elecciones{{/if}}
                </div>
                <div class="card-body">
                    <form enctype="multipart/form-data" method="POST" action="{{#if editMode}}/editar-elecciones{{else}}/agregar-elecciones{{/if}}">
                        <div class="mb-3">
                            <label for="nombre" class="form-label">Nombre de la eleccion</label>
                            <input type="text" class="form-control" id="nombre" name="nombre"
                                value="{{#if editMode}}{{elecciones.nombre}}{{/if}}">
                        </div>

                       
                        
                        {{#if editMode}}
                        <div class="mb-3">
                            <input type="hidden" name="eleccionesId" value="{{#if editMode}}{{elecciones.id}}{{/if}}">
                            <label for="estado" class="form-label">Estado</label>
                            <select class="form-control" id="estado" name="estado">
                            {{#if elecciones.estado}} 
                                    <option value=1 selected="selected">Activo</option>
                                    <option value=0>Inactivo</option>

                                {{else}}
                                    <option value=1>Activo</option>
                                    <option value=0 selected="selected">Inactivo</option>
                            {{/if}}
                            </select>
                        </div>
                        {{/if}} 
                        
                        <button type="submit" class="btn btn-primary">
                        {{#if editMode}}
                            Editar
                            {{else}}
                            Agregar
                        {{/if}} 
                        </button>
                        <a href="/elecciones" type="button" class="btn btn-warning">Regresar</a>
                    </form>
                </div>
                </div> 
        {{else}}
         <div class="alert alert-warning" role="alert">
            Para poder iniciar una elección se debe tener en el sistema al menos dos candidatos
            creados y activos y no debe haber una eleccion activa.
        </div>  
        {{/if}}
    {{/if}}  
    </div>
    <div class="col-md-3"></div>
</div>
