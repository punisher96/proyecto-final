  <div class="mt-4 row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
    {{#if editMode}} 
            <div class="card">
            <div class="text-white card-header bg-dark">
                {{#if editMode}}Editar Candidato{{else}}Agregar Candidato{{/if}}
            </div>
            <div class="card-body">
                <form enctype="multipart/form-data" method="POST" action="{{#if editMode}}/editar-candidato{{else}}/agregar-candidato{{/if}}">
                    <div class="mb-3">
                        <label for="nombre" class="form-label">Nombre del candidato</label>
                        <input type="text" class="form-control" id="nombre" name="nombre"
                            value="{{#if editMode}}{{candidato.nombre}}{{/if}}">
                    </div>

                    <div class="mb-3">
                        <label for="apellido" class="form-label">Apellido del candidato</label>
                        <input type="text" class="form-control" id="apellido" name="apellido"
                            value="{{#if editMode}}{{candidato.apellido}}{{/if}}">
                    </div>
                    <div class="mb-3">
                        <label for="partido" class="form-label">Partido al que pertenece</label> 
                        <select class="form-select" id="Partido" name="Partido">
                             <option {{#if editMode}}{{else}}selected{{/if}}>Seleccione una opcion</option>

                            {{#each partido as |partido|}} 
                                {{#if (equalValue partido.id ../candidato.partidoId )}}
                                    <option selected value="{{partido.id}}">{{partido.nombre}}</option>
                                {{else}}
                                    <option value="{{partido.id}}">{{partido.nombre}}</option>
                                {{/if}} 
                            {{/each}}  
                        </select> 
                    </div>

                    <div class="mb-3">
                        <label for="puesto" class="form-label">Puesto al que aspira</label>
                        <select class="form-select" id="PuestoElectivo" name="PuestoElectivo">
                             <option {{#if editMode}}{{else}}selected{{/if}}>Seleccione una opcion</option>

                            {{#each puesto as |puesto|}} 
                                {{#if (equalValue puesto.id ../candidato.puestoElectivoId )}}
                                    <option selected value="{{puesto.id}}">{{puesto.nombre}}</option>
                                {{else}}
                                    <option value="{{puesto.id}}">{{puesto.nombre}}</option>
                                {{/if}} 
                            {{/each}}  
                        </select> 
                    </div>
 
                    <div class="mb-3">
                        <label for="formFile" class="form-label">Foto del candidato</label>
                        <input class="form-control" name="ImagePath" type="file" id="formFile" accept="image/png, image/gif, image/jpeg">
                    </div>
 
                    {{#if editMode}}
                    <div class="mb-3">
                        <input type="hidden" name="candidatoId" value="{{#if editMode}}{{candidato.id}}{{/if}}">
                        <label for="estado" class="form-label">Estado</label>
                        <select class="form-control" id="estado" name="estado">
                           {{#if candidato.estado}} 
                                <option value=1 selected="selected">Activo</option>
                                <option value=0>Inactivo</option>

                            {{else}}
                                <option value=1>Activo</option>
                                <option value=0 selected="selected">Inactivo</option>
                           {{/if}}
                        </select>
                    </div>
                    {{/if}} 
                    
                    <button type="submit" class="btn btn-primary">
                       {{#if editMode}}
                        Editar
                         {{else}}
                        Agregar
                       {{/if}} 
                    </button>
                    <a href="/candidatos" type="button" class="btn btn-warning">Regresar</a>
                </form>
            </div>
            </div>
