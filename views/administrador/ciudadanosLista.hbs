 
<section class="container py-5 text-center">
    <div class="row py-lg-5">
        <div class="mx-auto col-lg-6 col-md-8">
            <h1 class="fw-light">Ciudadanos</h1>
            
            <p class="lead text-muted">Aqui se muestra el listado de los ciudadanos y las opciones
                que se pueden implementar con los mismos</p>
            <p>
                <a href="/agregar-ciudadano" class="my-2 btn btn-primary">Agregar nuevo ciudadano</a>
            </p>
        </div>
    </div>
</section>
{{#if ciudadanos}} 
<div class="py-5 album bg-light">
    <div class="container"> 
        <div class="row">
            {{#each ciudadanos as |ciudadano|}}
            <div class="card col-md-3">
                <div class="card-body">
                    <h5 class="card-title">{{ciudadano.nombre}} {{ciudadano.apellido}}</h5>
                    <h6 class="mb-2 card-subtitle text-muted">Documento de identidad: {{ciudadano.documento_de_identidad}}</h6>
                    <h6 class="mb-2 card-subtitle">Email: {{ciudadano.email}}</h6>

                    {{#if ciudadano.estado }}
                        <span class="my-2 badge bg-success float-end">Active</span><br>
                    {{else}}
                        <span class="my-2 badge bg-danger float-end">Disabled</span><br> 
                    {{/if}}

                    <a href="/editar-ciudadano/{{ciudadano.id}}?edit=true" class="my-3 btn btn-warning">Editar</a>

                    <form class="form-inline" id="form-delete" action="/delete-ciudadano" method="POST">
                        <input type="hidden" name="ciudadanoId" value="{{ciudadano.id}}">
                        <button type="submit" id="" class="btn btn-danger">Eliminar</button>
                    </form> 
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>
{{else}}
<div class="alert alert-warning" role="alert">
   No hay Ciudadanos 
</div>
{{/if}}



 